name: Auto merge Dependabot

permissions:
  pull-requests: write
  contents: write

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]
  workflow_dispatch:
    inputs:
      pr-number:
        required: true

jobs:
  automerge:
    runs-on: ubuntu-latest
    steps:
      - name: Automatically Merge Dependabot
        uses: fastify/github-action-merge-dependabot@v3.4.0
        if: github.event_name != 'workflow_dispatch'
        with:
          target: minor
      - name: Manually Merge Dependabot
        uses: fastify/github-action-merge-dependabot@v3.4.0
        if: github.event_name == 'workflow_dispatch'
        with:
          pr-number: ${{ github.event.inputs.pr-number }}
